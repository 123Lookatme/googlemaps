<form role="form" class="loginform" id="register">
    <div id="error"></div>
    <div class="form-group">
        <label  for="login">Введите Логин</label>
        <input type="text" class="form-control" id="login" placeholder="Login">
        <span class="error"></span>
    </div>
    <div class="form-group">
        <label for="email">Введите email</label>
        <input type=text" class="form-control" id="email" placeholder="Enter email">
        <span class="error"></span>
    </div>
    <div class="form-group">
        <label for="pass">Ввелите пароль</label>
        <input type="password" class="form-control" id="pass" placeholder="Password">
        <span class="error"></span>
    </div>
    <div class="form-group">
        <label for="repass">Повторите пароль</label>
        <input type="password" class="form-control" id="repass" placeholder="Password">
        <span class="error"></span>

        <button type="submit" class="btn btn-primary">Зарегистриоватся</button>

</form>